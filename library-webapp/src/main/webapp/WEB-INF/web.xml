<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--<welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>-->
    <servlet>
        <servlet-name>FindBookByIDServlet</servlet-name>
        <servlet-class>servlets.FindBookByIDServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAllBooksServlet</servlet-name>
        <servlet-class>servlets.ShowAllBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteBookByID</servlet-name>
        <servlet-class>servlets.DeleteBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBook</servlet-name>
        <servlet-class>servlets.CreateNewBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindBookByIDServlet</servlet-name>
        <url-pattern>/find_book_by_id</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowAllBooksServlet</servlet-name>
        <url-pattern>/show_all_books</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteBookByID</servlet-name>
        <url-pattern>/delete_book</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBook</servlet-name>
        <url-pattern>/add_book</url-pattern>
    </servlet-mapping>
    

</web-app>